<Window x:Class="_17_ProjectsFinder.SpecificPostPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_17_ProjectsFinder"
        mc:Ignorable="d"
        Background="#2c2c54"
        Title="SpecificPostPage" Height="450" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Width="600" Height="50" FontSize="23" Foreground="White" Padding="10,10,0,0" x:Name="title"/>
            <Label Height="3" Width="400" HorizontalAlignment="Left" Background="#22a6b3"/>
            <TextBlock Width="600" FontSize="17" Text="Краткое описание:" Foreground="White" Padding="10,10,0,0"/>
            <TextBlock FontSize="15" Height="280" Foreground="White" Padding="10,0,0,10" x:Name="description"/>
            <Button Width="200" Height="30" Content="Присоединиться" FontSize="14" Background="#686de0" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
