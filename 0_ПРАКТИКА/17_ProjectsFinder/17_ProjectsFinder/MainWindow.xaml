<Window x:Class="_17_ProjectsFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_17_ProjectsFinder"
        mc:Ignorable="d"
        Title="Projects Finder Sing in/ Sing up" Height="600" Width="800" Background="Bisque">
    <Grid>
        <StackPanel>
            <Label Content="Логин" HorizontalAlignment="Center" Foreground="CadetBlue" FontSize="34" Margin="50"/>
            <TextBox x:Name="login" Width="400" FontSize="17" Foreground="Chocolate"/>
            <Label Content="Пароль" HorizontalAlignment="Center" Foreground="CadetBlue" FontSize="34" Margin="50"/>
            <TextBox x:Name="password" Width="400" FontSize="17" Foreground="Chocolate"/>
            <Button Click="StartValidation" Width="200" Height="40" Content="Отправить" Margin="40" Background="Cornsilk" Foreground="BlueViolet" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
