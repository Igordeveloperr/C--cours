<Window x:Class="_5_Factory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5_Factory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,385">
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="create" FontSize="15">
                    <MenuItem Header=".txt" Click="CreateTxtFile"></MenuItem>
                    <MenuItem Header=".rtf" Click="CreateRtfFile"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16"></MenuItem>
            <MenuItem Header="Close" FontSize="16"></MenuItem>
        </Menu>
    </Grid>
</Window>
